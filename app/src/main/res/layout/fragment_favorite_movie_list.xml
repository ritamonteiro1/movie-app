<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favoriteMovieListConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.movie.FavoriteMovieListFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/favoriteMovieListToolBar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="@color/blue_dd4"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.Toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/favorite_movie_list_tool_bar_title_text" />

    <TextView
        android:id="@+id/favoriteMovieListTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favoriteMovieListToolBar"
        android:text="@string/favorite_movie_list_text" />
</androidx.constraintlayout.widget.ConstraintLayout>